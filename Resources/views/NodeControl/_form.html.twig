{% form_theme form 'BtnAdminBundle:Form:fields.html.twig' %}

<form action="{{ parent is defined ? path('cp_add_node', {'id': parent.id is defined ? parent.id : null}) : path('cp_edit_node', {'id': node.id}) }}" class="form-horizontal" method="post" novalidate data-remote>
    <div class="row">
        <div class="col-md-6">
            <h3>{{ node.name }}</h3>
        </div>
        <div class="col-md-6">
            <div class="btn-group pull-right top-offset">
              <input type="submit" class="btn btn-small btn-success" value="{{ 'btn_control.save'|trans }}"/>
              {#<a href="#" class="btn btn-small">{{ 'btn_control.preview'|trans }}</a>#}
              <a href="#" class="btn btn-small">{{ 'btn_control.add_subpage'|trans }}</a>
              <a href="{{ url('cp_remove_node', {'id': node.id}) }}" class="btn btn-small btn-danger">{{ 'btn_control.delete'|trans }}</a>
            </div>
        </div>
    </div>

    {{ form_errors(form) }}

    {{ form_row(form.title) }}

    <div class="form-group">
        {{ form_errors(form.slug) }}
        {{ form_label(form.slug) }}
        <div class="col-sm-10">
            <div class="input-group">
                <span class="input-group-addon">/{{ node.fullSlug(true) }}</span>
                {{ form_widget(form.slug) }}
            </div>
        </div>
    </div>



    {{ form_row(form.link) }}
    {{ form_row(form.metaTitle) }}
    {{ form_row(form.metaKeywords) }}
    {{ form_row(form.metaDescription) }}
    {{ form_row(form.ogTitle) }}
    {{ form_row(form.ogDescription) }}
    {{ form_row(form.ogImage) }}

      <div class="control-group">
        <div class="controls">
            {{ form_row(form.visible) }}

        </div>
      </div>

    {{ form_rest(form) }}
</form>
