<li id="{{ node.id }}">
    <a href="{{ url('cp_edit_node', {'id': node.id}) }}" data-remote="formContainer" class="node-title">{{ node.title }}</a> |

        {% if node.provider %}
            {{ node.provider }}
        {% else %}
            no content attached
        {% endif %}
    <a href="{{ url('cp_add_node', {'id': node.id}) }}"><i class="icon-plus"></i></a>
    <a href="{{ url('cp_remove_node', {'id': node.id}) }}" data-confirm="Are you sure you want to delete?" ><i class="icon-minus"></i></a>
    <ul>
        {% for node in node.children %}
            {% include 'BtnNodesBundle:NodeControl:_tree.html.twig' %}
        {% endfor %}
    </ul>
</li>